@using System.Globalization
@model IEnumerable<Restaurant_QKA.Models.MenuItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;700&display=swap&subset=vietnamese" rel="stylesheet">

<section>
    <!-- Hero Start -->
    <div class="container-fluid py-5 mb-5 hero-header rounded-2">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-md-12 col-lg-7">
                    <h1 class="mb-5 display-3" style="color: #990012">Super Sale 1/1</h1>
                </div>
                <div class="col-md-12 col-lg-5">
                    <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active rounded">
                                <img src="~/Content/img/hero-img-1.png" class="img-fluid w-100 h-100 bg-secondary rounded" alt="First slide">
                                <a href="#" class="btn px-4 py-2 text-white rounded">-20% Món Salad</a>
                            </div>
                            <div class="carousel-item rounded">
                                <img src="~/Content/img/hero-img-2.jpg" class="img-fluid w-100 h-100 rounded" alt="Second slide">
                                <a href="#" class="btn px-4 py-2 text-white rounded">Free Ship</a>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Bestsaler Product Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center mx-auto mb-5" style="max-width: 700px;">
                <h1 class="display-4  text-danger">Bestseller</h1>
            </div>
            <div class="row g-4">


                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3 mb-4 menu-item">
                            <div class="card shadow-sm border-light rounded position-relative h-100">
                                <div class="card-body text-center p-3">
                                    <img src="@Url.Content("~/Content/MenuItems/" + item.ImageUrl)" class="rounded-2 img-fluid" style="width: 100%; height: 200px; object-fit: cover;" alt="@item.Name">
                                </div>
                                <div class="card-footer text-center">
                                    <a href="/User/Menu/DetailMenuItem/@item.ItemID" class="h5 text-dark d-block mb-2" style="font-weight: bold;">@item.Name</a>
                                    <div class="d-flex justify-content-center my-3">
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-muted"></i>
                                    </div>
                                    <h4 class="mb-3 text-success" style="font-weight: bold; font-size: 1.2rem;">@String.Format(new CultureInfo("vi-VN"), "{0:N0} VND", item.Price) VND</h4> <!-- Hiển thị giá dưới dạng tiền tệ -->
                                    <!-- Thêm vào giỏ hàng -->
                                    <a href="@Url.Action("AddToCart", "Carts", new { menuItemId = item.ItemID, quantity = 1 })" class="btn btn-primary rounded-pill mt-3" style="font-size: 1rem; padding: 10px 20px;">
                                        Thêm vào giỏ hàng
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <p>No items available to display.</p>
                }

                @*}*@
            </div>
        </div>
    </div>
    <!-- Bestsaler Product End -->
    <!-- Fact Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="bg-light p-5 rounded">
                <div class="row g-4 justify-content-center">
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="counter bg-white rounded p-5">
                            <i class="fa-solid fa-handshake" style="color: #b40012;"></i>
                            <h4>Khách Hàng Tin Dùng</h4>
                            <h1>@ViewBag.Totalcus</h1>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="counter bg-white rounded p-5">
                            <i class="fa-solid fa-people-carry-box" style="color: #b40012;"></i>
                            <h4>Phục Vụ Tận Tâm</h4>
                            <h1>100%</h1>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="counter bg-white rounded p-5">
                            <i class="fa-solid fa-users" style="color: #b40012;"></i>
                            <h4>Nhân Viên Chuyên Nghiệp</h4>
                            <h1>@ViewBag.Totalstaffs</h1>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="counter bg-white rounded p-5">
                            <i class="fa-solid fa-certificate" style="color: #b40012;"></i>
                            <h4>Sản Phẩm Chất Lượng</h4>
                            <h1>@ViewBag.Totalitems</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fact Start -->
</section>

