@model List<Restaurant_QKA.Models.MenuItem>

@{
    ViewBag.Title = "Danh sách công thức món ăn";
    Layout = "~/Areas/StaffChef/Views/Shared/_LayoutStaffChef.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh sách công thức món ăn</h2>

    <table class="table table-striped table-hover custom-table">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Tên món</th>
                <th class="text-center">Nguyên liệu</th>
                <th class="text-center">Số lượng</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1;
            }
            @foreach (var menuItem in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td class="text-center" style="vertical-align: middle;">
                        <a href="@Url.Action("Create", "Recipe", new { id = menuItem.ItemID })"
                           class="text-dark menu-link">
                            @menuItem.Name
                        </a>
                    </td>
                    <td class="text-center" style="vertical-align: middle; width: 25%;">
                        @foreach (var recipe in menuItem.Recipes)
                        {
                            <div class="ingredient-box">@recipe.WareHouse.Name</div>
                        }
                    </td>
                    <td class="text-center" style="vertical-align: middle;">
                        @foreach (var recipe in menuItem.Recipes)
                        {
                            <div class="quantity-box">@recipe.Quantity</div>
                        }
                    </td>
                    <td class="text-center" style="vertical-align: middle; width: 25%;">
                        @foreach (var recipe in menuItem.Recipes)
                        {
                            <div class="action-box">
                                <a href="@Url.Action("Delete", "Recipe", new { id = recipe.RecipeID })"
                                   class="btn btn-sm w-100 delete-btn"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">
                                    Xóa
                                </a>
                            </div>
                        }
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>

<style>
    /* Cấu hình chung cho bảng */
    .custom-table {
        table-layout: fixed;
        width: 100%;
    }

        /* Thu hẹp ô thứ tự */
        .custom-table th:nth-child(1),
        .custom-table td:nth-child(1) {
            width: 5%;
            white-space: nowrap;
            text-align: center;
            overflow: hidden;
        }

        /* Thu hẹp ô số lượng */
        .custom-table th:nth-child(4),
        .custom-table td:nth-child(4) {
            width: 10%; /* Điều chỉnh kích thước phù hợp */
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
        }

        .custom-table th,
        .custom-table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

            .custom-table th:nth-child(2),
            .custom-table td:nth-child(2) {
                width: 40%;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                text-align: center;
                color: black;
            }

        .custom-table tr {
            transition: background-color 0.3s ease;
        }

            .custom-table tr:hover {
                background-color: #f0f8ff;
            }
        .custom-table th:nth-child(5),
        .custom-table td:nth-child(5) {
            width: 15%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            text-align: center;
        }
    /* Liên kết của tên món */
    .menu-link {
        text-decoration: none;
        color: #007bff;
        transition: color 0.3s ease;
        display: inline-block;
        max-width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .menu-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    /* Hộp nguyên liệu */
    .ingredient-box {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 25px;
        margin-bottom: 5px;
        background-color: #f9f9f9;
        font-size: 14px;
    }

    /* Hộp số lượng */
    .quantity-box {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 25px;
        margin-bottom: 5px;
        background-color: #f9f9f9;
        font-size: 14px;
    }

    /* Hộp thao tác */
    .action-box {
        display: flex;
        justify-content: center;
    }

    .delete-btn {
        width: 100%;
        padding: 10px;
        margin: 2px;
        border-radius: 25px;
        transition: background-color 0.3s ease;
    }

        .delete-btn:hover {
            background-color: #c82333;
            color: #fff;
        }

        .delete-btn:focus {
            outline: none;
        }
</style>
